doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title <%= title %>

    // build:css styles/styles.css
    <% if (animateCss) { %>link(rel='stylesheet', type='text/css', href='bower_components/animate.css/animate.css')<% } %>
    link(rel='stylesheet', type='text/css', href='styles/main.css')
    // endbuild

  body<% if (animateCss) { %>.animated.rollIn<% } %>

    main
      h1'Allo, 'Allo!
      img(src='http://yeoman.io/assets/img/yeoman-logo.a053.png')
      h3 You now have :
      ul
        li Jade
        li Stylus
        li jQuery
        li CoffeeScript

    // build:js scripts/scripts.js
    <% if (jQuery) { %>script(src='bower_components/jquery/dist/jquery.min.js')<% } %>
    script(src='scripts/main.js')
    // endbuild
